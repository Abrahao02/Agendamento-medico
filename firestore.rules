rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /doctors/{doctorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }

    match /availability/{availabilityId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == request.resource.data.doctorId;
    }

    match /appointments/{appointmentId} {
      // âœ… SECURITY: Block direct client-side creation from public (unauthenticated) users
      // Public appointments must be created via Cloud Function (createPublicAppointment)
      // Authenticated users (doctors) can create appointments directly (they control their own data)
      allow create: if request.auth != null && request.resource.data.doctorId == request.auth.uid;
      allow read, update: if request.auth != null
                          && resource.data.doctorId == request.auth.uid;
      allow delete: if false;
    }
  }
}
